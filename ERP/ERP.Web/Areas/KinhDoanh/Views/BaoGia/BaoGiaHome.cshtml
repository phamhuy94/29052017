
@{
    ViewBag.Title = "BaoGiaHome";
}

<script src="~/Content/self-writing/js/Controllers/RouteCtrl.js"></script>
<script src="~/Content/self-writing/js/Services/BaoGiaService.js"></script>
<script src="~/Content/self-writing/js/Controllers/BaoGiaCtrl.js"></script>
<script src="~/Content/self-writing/pagination.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/Content/self-writing/css/Kinhdoanh/baogia.css" rel="stylesheet" />
<style>
    /* Let's get this party started */
::-webkit-scrollbar {
    width: 5px;
}
 
/* Track */
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    -webkit-border-radius: 10px;
    border-radius: 10px;
}
 
/* Handle */
::-webkit-scrollbar-thumb {
    -webkit-border-radius: 10px;
    border-radius: 10px;
    background: #00BFFF; 
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
}
::-webkit-scrollbar-thumb:window-inactive {
	background: #00BFFF; 
}
</style>
<div class="panel-heading">
    <marquee width="80%">Bạn đang xem danh mục Báo giá. Hãy tạo một báo giá hoàn chỉnh. Good luck!</marquee>
</div>
<div ng-app="myApp"
     ng-controller="HomeBaoGiaCtrl"
     layout="column">
    
    <md-tabs md-stretch-tabs
             md-selected="selectedIndex">
        <md-tab label="List báo giá"></md-tab>
        <md-tab label="Thêm báo giá mới"></md-tab>
        <md-tab label="List báo giá đã lên PO"></md-tab>
        <md-tab label="List báo giá thành công"></md-tab>
        <md-tab label="List báo giá đang chờ phản hồi khách"></md-tab>
        <md-tab label="List báo giá thất bại"></md-tab>
        <md-tab label="List báo giá đã hủy"></md-tab>
    </md-tabs>

    <div id="content" ui-view flex> </div>

</div>



