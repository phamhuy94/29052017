@model IEnumerable<ERP.Web.Models.Database.BH_DON_HANG_PO>

@{
    ViewBag.Title = "Index";
}
<script src="~/Content/self-writing/js/Services/DonHangPOService.js"></script>
<script src="~/Content/self-writing/js/Controllers/DonHangPOCtrl.js"></script>


<div ng-app="myApp" ng-controller="DonHangPOCtrl">
    <input type="hidden" value="@Session["USERNAME"]" id="username" />
    <input type="hidden" id="isadmin" name="isadmin" value="@Session["IS_AMIN"]" />
    <input type="hidden" id="macongty" name="macongty" value="@Session["MA_CONG_TY"]" />
    <div class="content">
        <div class="container">
            <table class="table">
                <tr ng-repeat="item in Detail.ListLocDuLieu">
                    <td>
                        Đã duyêt : <input type="checkbox" ng-model="item.da_duyet" ng-change="trangthai(item)" />
                    </td>
                    <td>
                        Đang duyệt <input type="checkbox" ng-model="item.dang_duyet" ng-change="trangthai(item)" />
                    </td>
                    <td>
                        Đã giữ <input type="checkbox" ng-model="item.da_giu" ng-change="trangthai(item)" />
                    </td>
                </tr>
            </table>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Mã số PO</th>
                    <th>Ngày lên PO</th>
                    <th>Khách hàng</th>
                    <th>Tên liên hệ</th>
                    <th>Hình thức thanh toán</th>
                    <th>Tổng tiền hàng</th>
                    <th>Tổng tiền thuế</th>
                    <th>Tổng tiền thanh toán</th>
                    <th>Số tiền viết bằng chữ</th>
                    <th>Nhân viên quản lý</th>
                    <th>Địa điểm giao hàng</th>
                    <th>Đã giữ</th>
                    <th>Đã duyệt</th>
                    <th>Đang duyệt</th>
                    <th>Sửa</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="entry in list_donhangPO" class="hover" ng-class-odd="'odd'" ng-class-even="'even'">
                    <td>{{entry.MA_SO_PO}}</td>
                    <td>{{entry.NGAY_LEN_PO | date: 'dd/MM/yyyy'}}</td>
                    <td>{{entry.TEN_CONG_TY}}</td>
                    <td>{{entry.TEN_LIEN_HE}}</td>
                    <td>{{entry.HINH_THUC_THANH_TOAN}}</td>
                    <td>{{entry.TONG_TIEN_HANG | currency : '' : 0}}</td>
                    <td>{{entry.TONG_TIEN_THUE_GTGT | currency: '' : 0}}</td>
                    <td>{{entry.TONG_TIEN_THANH_TOAN | currency : '' : 0}}</td>
                    <td>{{entry.SO_TIEN_VIET_BANG_CHU}}</td>
                    <td>{{entry.HO_VA_TEN}}</td>
                    <td>{{entry.DIA_DIEM_GIAO_HANG}}</td>
                    <td><input type="checkbox" ng-disabled="true" ng-model="entry.DA_GIU" /></td>
                    <td><input type="checkbox" ng-disabled="true" ng-model="entry.DA_DUYET" /></td>
                    <td><input type="checkbox" ng-disabled="true" ng-model="entry.DANG_DUYET" /></td>
                    <td><a href="/DonHangPO/Edit/{{entry.MA_SO_PO}}">Sửa đơn PO</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>